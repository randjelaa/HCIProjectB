<Window x:Class="CodeComparer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CodeComparer.Views"
        xmlns:vm="clr-namespace:CodeComparer.ViewModels"
        Title="Code Comparer" Height="600" Width="1000"
        Background="{DynamicResource MaterialDesignPaper}">

    <!-- Set the DataContext -->
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Import Buttons -->
            <RowDefinition Height="2*" />
            <!-- TextBoxes -->
            <RowDefinition Height="Auto" />
            <!-- Compare Button -->
            <RowDefinition Height="3*" />
            <!-- Diff Results -->
            <RowDefinition Height="Auto" />
            <!-- Export Button -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- Import Buttons -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="Import Left File" Margin="5"
            Command="{Binding ImportLeftCommand}"
            Style="{StaticResource MaterialDesignOutlinedButton}" />
            <Button Content="Import Right File" Margin="5"
            Command="{Binding ImportRightCommand}"
            Style="{StaticResource MaterialDesignOutlinedButton}" />
        </StackPanel>

        <!-- Left Code Input -->
        <TextBox Grid.Row="1" Grid.Column="0" Margin="5" AcceptsReturn="True" TextWrapping="Wrap"
                 Text="{Binding LeftCode, UpdateSourceTrigger=PropertyChanged}" 
                 materialDesign:HintAssist.Hint="Original Code"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}" />

        <!-- Right Code Input -->
        <TextBox Grid.Row="1" Grid.Column="1" Margin="5" AcceptsReturn="True" TextWrapping="Wrap"
                 Text="{Binding RightCode, UpdateSourceTrigger=PropertyChanged}"
                 materialDesign:HintAssist.Hint="Modified Code"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}" />

        <!-- Compare Button -->
        <Button Grid.Row="2" Grid.ColumnSpan="2" Height="40" Margin="5"
                Content="Compare"
                Command="{Binding CompareCommand}"
                Style="{StaticResource MaterialDesignRaisedButton}" />

        <!-- Diff Results -->
        <ScrollViewer Grid.Row="3" Grid.ColumnSpan="2" Margin="5" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Legend -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Legend: " FontWeight="Bold" Margin="0,0,10,0"/>
                    <Border Background="LightCoral" Padding="5" Margin="5">
                        <TextBlock Text="Deleted" />
                    </Border>
                    <Border Background="LightGreen" Padding="5" Margin="5">
                        <TextBlock Text="Inserted" />
                    </Border>
                    <Border Background="PeachPuff" Padding="5" Margin="5">
                        <TextBlock Text="Modified" />
                    </Border>
                </StackPanel>

                <!-- Diff Results -->
                <ItemsControl ItemsSource="{Binding LineComparisons}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!-- Original (Left) -->
                                <TextBlock Grid.Column="0" Text="{Binding LeftText}" Padding="4">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding LeftChangeType}" Value="Deleted">
                                                    <Setter Property="Background" Value="LightCoral" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- Modified (Right) -->
                                <TextBlock Grid.Column="1" Text="{Binding RightText}" Padding="4">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RightChangeType}" Value="Inserted">
                                                    <Setter Property="Background" Value="LightGreen" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RightChangeType}" Value="Modified">
                                                    <Setter Property="Background" Value="PeachPuff" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Statistics -->
                <StackPanel Orientation="Horizontal" Margin="10,20,0,0">
                    <TextBlock Text="Statistics: " FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding SameCount, StringFormat=Same: {0}}" Margin="10,0"/>
                    <TextBlock Text="{Binding DeletedCount, StringFormat=Deleted: {0}}" Margin="10,0"/>
                    <TextBlock Text="{Binding InsertedCount, StringFormat=Inserted: {0}}" Margin="10,0"/>
                    <TextBlock Text="{Binding ModifiedCount, StringFormat=Modified: {0}}" Margin="10,0"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="4" Grid.ColumnSpan="2" Height="40" Margin="5"
        Content="Export Results"
        Command="{Binding ExportCommand}"
        Style="{StaticResource MaterialDesignOutlinedButton}" />

    </Grid>
</Window>

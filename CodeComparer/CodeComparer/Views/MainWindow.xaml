<Window x:Class="CodeComparer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CodeComparer.Views"
        xmlns:vm="clr-namespace:CodeComparer.ViewModels"
        Title="Code Comparer" Height="600" Width="1000"
        Background="{DynamicResource MaterialDesignPaper}">

    <!-- Set the DataContext -->
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <!-- TextBoxes -->
            <RowDefinition Height="Auto" />
            <!-- Button -->
            <RowDefinition Height="3*" />
            <!-- ListBox -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left Code Input -->
        <TextBox Grid.Row="0" Grid.Column="0" Margin="5" AcceptsReturn="True" TextWrapping="Wrap"
                 Text="{Binding LeftCode, UpdateSourceTrigger=PropertyChanged}" 
                 materialDesign:HintAssist.Hint="Original Code"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}" />

        <!-- Right Code Input -->
        <TextBox Grid.Row="0" Grid.Column="1" Margin="5" AcceptsReturn="True" TextWrapping="Wrap"
                 Text="{Binding RightCode, UpdateSourceTrigger=PropertyChanged}"
                 materialDesign:HintAssist.Hint="Modified Code"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}" />

        <!-- Compare Button -->
        <Button Grid.Row="1" Grid.ColumnSpan="2" Height="40" Margin="5"
                Content="Compare"
                Command="{Binding CompareCommand}"
                Style="{StaticResource MaterialDesignRaisedButton}" />

        <!-- Diff Results -->
        <ScrollViewer Grid.Row="2" Grid.ColumnSpan="2" Margin="5" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding LineComparisons}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Original (Left) -->
                            <TextBlock Grid.Column="0" Text="{Binding LeftText}" Padding="4">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding LeftChangeType}" Value="Deleted">
                                                <Setter Property="Background" Value="LightCoral" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <!-- Modified (Right) -->
                            <TextBlock Grid.Column="1" Text="{Binding RightText}" Padding="4">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RightChangeType}" Value="Inserted">
                                                <Setter Property="Background" Value="LightGreen" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding RightChangeType}" Value="Modified">
                                                <Setter Property="Background" Value="PeachPuff" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
